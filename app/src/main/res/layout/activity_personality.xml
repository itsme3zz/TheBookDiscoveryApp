<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonalityActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingTop="66dp"
        android:text="Your Results"
        android:textColor="#ffff"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="306dp" />

    <TextView
        android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pb"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="16sp"
        android:paddingTop="16sp"
        android:text=""
        android:textColor="#ffff"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="306dp" />

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="131dp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="16sp"
        android:paddingTop="16sp"
        android:paddingBottom="30dp"
        android:text=" "
        android:textColor="#ffff"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="306dp" />

    <TextView
        android:id="@+id/RB"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="266dp"
        android:paddingLeft="16sp"
        android:paddingTop="80dp"
        android:text="Books We Discovered For You"
        android:textColor="#ffff"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="306dp" />


    <LinearLayout
        android:id="@+id/books"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_below="@+id/RB"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/b1"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_gravity="center_vertical"
            android:onClick="book1"
            android:paddingTop="16dp" />

        <ImageView
            android:id="@+id/b2"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="16sp"
            android:onClick="book2"
            android:paddingRight="10sp" />

        <ImageView
            android:id="@+id/b3"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="16sp"
            android:onClick="book3"
            android:paddingRight="26sp" />


    </LinearLayout>


    <ProgressBar
        android:id="@+id/pb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RB"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="211dp"
        android:paddingLeft="50dp" />

    <ProgressBar
        android:id="@+id/pb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RB"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="211dp"
        android:layout_toRightOf="@id/pb1"
        android:paddingLeft="80dp" />

    <ProgressBar
        android:id="@+id/pb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RB"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="211dp"
        android:layout_toRightOf="@id/pb2"
        android:paddingLeft="80dp" />


    <Button
        android:layout_width="172dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/books"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/button_shape"
        android:onClick="readBook"
        android:text="Read Selected Book" />


    <Button
        android:id="@+id/upload"
        android:layout_width="172dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="163dp"
        android:background="@drawable/button_shape"
        android:text="Select Book " />


    <Button
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="94dp"
        android:background="@drawable/button_shape"
        android:onClick="testAgain"
        android:text="Take personality Test" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="167dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:onClick="logOut"
        android:text="Logout" />


</RelativeLayout>